# of said person's immediate fault when using the work as intended.

acronyms=${ACRONYMDB:-/usr/share/misc/acronyms}

[[ $1 = is || $1 = ist ]] && shift

[ $# -lt 1 ] && print -u2 "Usage: $(basename $0) [is] <acronym>"

rv=0
while [ $# -gt 0 ] ; do
	target=$(echo "$1" | tr '[:lower:]' '[:upper:]')
	ans=$(fgrep -a "$target" <$acronyms 2>/dev/null | \
	    sed -ne "/^$(print -nr -- "$target" | \
	    sed s,/,.,)[[:space:]]/s^${target}[[:space:]]*p")
	if [[ -z $ans ]]; then
		target="$1"
		ans=$(whatis "$target" 2>/dev/null | \
		    egrep "^${target}[, ]" 2>/dev/null) || \
		    ans=$(fgrep -i "$target" /usr/ports/INDEX 2>/dev/null | \
		    while IFS=\| read a b c d e; do \
			print -r -- "${a}|${d%% \(uses*}"; \
		    done | \
		    fgrep -i "$target" 2>/dev/null | \
		    sort -u | \
		    column -ts'|')
	fi
	if [[ -n $ans ]]; then
		print "   ${target}:\n$ans"
	else
		print -u2 "Gee...  I don't know what ‘${target}’ means..."
		rv=1
		if whence -p dict >&-; then
			print -u2 "Let's try The Dictionary..."
			rv=2
			dict "$target" && rv=0
		fi
	fi
	shift
done
exit $rv
